<h1>Make a New Song:</h1>
<form action='/songs/<%=@song.slug%>' method=POST>
    <input type="hidden" id="hidden" name="_method" value="patch"
    <h2>Song Name:<input type="text" name="song[name]" id='Name' value="<%=@song.name%>"></h2>
    <h2>Select an Artist:</h2>
    <% @artists.each do |artist| %>
        <p><input type="radio" name="song[artist_id]" id="<%=artist.name%>" value="<%=artist.id%>" <%='checked' if @song.artist == artist%>><%=artist.name%></p>
    <%end%>
    <h2>Or Create a New Artist:</h2>
    <p>Artist Name:<input type="text" name="artist[name]" id="Artist Name"></p>
    <h2>Select Genres:</h2>
    <% @genres.each do |genre| %>
        <p><input type="checkbox" name="song[genre_ids]" id="<%=genre.name%>" value="<%=genre.id%>" <%='checked' if @song.genres.include?(genre)%>><%=genre.name%></p>
    <%end%>
    <input type="submit" value="Edit Song" id="Save">
</form>